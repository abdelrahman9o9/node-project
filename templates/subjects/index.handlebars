<h1>Subjects</h1>

<div class="my-2">
    <a href='/subjects/create'><button class="btn btn-success" type="submit">Add a new subject</button></a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Subject Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {{#each subjects}}
        <tr>
            <td><a href="/subjects/{{_id}}">{{ name }}</a></td>
            <td>
                <a href='/subjects/{{_id}}/edit'><button class="btn btn-success" type="submit">Edit</button></a>
                <form action="/subjects/{{_id}}?_method=delete" method="post">
                    <button onclick="return confirmDelete()" class="btn btn-success" type="submit">Delete</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

<script>
    function confirmDelete() {
        var result = confirm("Are you sure you want to delete this subject?");
        return result;
    }
</script>