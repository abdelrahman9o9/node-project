<h1>Edit-{{subject.name}}</h1>

<form action="/subjects/{{subject._id}}?_method=put" method="post">
    {{!--name--}}
    <div>
        <label for="">Name</label>
        <input type="text" class="form-control" name="name" value= "{{subject.name}}"/>
    </div>

    {{!--code--}}
    <div>
        <label for="">Code</label>
        <input type="text" class="form-control" name="code" value="{{subject.code}}"/>
    </div>

    {{!--department--}}
    <div>
        <label for="">Department</label>
        <select name="department" id="" class="form-select">

            {{#each departments}}
                <option value="{{_id}}">{{name}}-{{code}}</option>
            {{/each}}
        </select>
    </div>
    {{!--prerequisite--}}
    <div>
        <label for="">Prerequisite</label>
        <input type="text" class="form-control" name="prerequisite" value= "{{subject.prerequisite}}">
    </div>
    <div class="mt-3">
        <button class="btn btn-success" type="submit">
            Save
        </button>
    </div>
</form>